<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background = "#14FFEB3B"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <!--<include-->
            <!--android:id="@+id/app_bar"-->
        <!--layout="@layout/app_bar">-->

    <!--</include>-->

    <RelativeLayout
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/backgroung1">

        <Spinner
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1">
        </Spinner>

        <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/ivSwitch"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:src="@drawable/exchange"/>

        <Spinner
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
                android:layout_alignParentRight="true">

        </Spinner>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroung1"
            android:layout_width="match_parent"
            android:layout_height="170dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:textColor="#2980b9"
                android:id="@+id/tvEnglish"
                android:textSize="20dp"
                android:layout_marginLeft="10dp" android:layout_marginTop="5dp"/>

        <EditText
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type your text here"
                android:id="@+id/edEnglish"
                android:layout_below="@id/tvEnglish"
                android:layout_marginTop="2dp"/>

        <ImageButton
                android:id="@+id/ibMuteEN"
                android:background="@drawable/backgroung1"
                android:src="@drawable/mute"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="63dp"/>

        <ImageView
                android:id="@+id/btnSpeak"
                android:layout_alignParentLeft="true"
                android:layout_width="43dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/voice"
                android:layout_height="61dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent" 
            android:layout_height="70dp"
            android:background="@drawable/backgroung1">


        <ImageView android:id="@+id/ivSaveScreen"
                   android:layout_width="60dp"
                   android:layout_height="50dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginBottom="10dp"
                   android:src="@drawable/save1"
                   android:layout_marginRight="0dp"
                   android:layout_alignParentTop="true"/>

        <Button
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/translate"
                android:textColor="#FFFFFF"
                android:text="TRANSLATE"
                android:id="@+id/btTranslate"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:background="@drawable/backgroung1"
            android:layout_height="150dp">

        <TextView
                android:id="@+id/tvVietnamese"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vietnamese"
                android:textColor="#2980b9"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

        <ImageView
                android:id="@+id/ivSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/save"
                android:layout_marginTop="5dp"
                android:layout_marginRight="70dp"
                android:layout_alignParentRight="true"/>

        <TextView

                android:hint="Your translation appears here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edVietnam"
                android:layout_below="@id/tvVietnamese"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="3dp"/>

        <ImageButton
                android:id="@+id/ibMuteVN"
                android:background="@drawable/backgroung1"
                android:src="@drawable/mute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgroung1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.design.bottomappbar.BottomAppBar
                style="@style/Widget.MaterialComponents.BottomAppBar"
                android:backgroundTint="#79416B9B"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                tools:ignore="BottomAppBar"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_alignParentLeft="true">
        </android.support.design.bottomappbar.BottomAppBar>

        <android.support.design.widget.FloatingActionButton
                android:layout_alignParentBottom="true"
                app:backgroundTint="#fff"
                android:id="@+id/ivCamera"
                android:src="@drawable/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"/>

    </RelativeLayout>
</LinearLayout>
